<script>
    function calcular(){
        var valor_inicial = document.getElementById("valor_inicial").value
        var decimal = document.getElementById("decimal").value
        var porcentagem = decimal / 100
        document.getElementById("valor_desconto")
            .value = (valor_inicial * porcentagem).toFixed(2)
         
        var valor_desconto = valor_inicial * porcentagem
        document.getElementById("valor_final")
            .value  = (valor_inicial - valor_desconto).toFixed(2)
    }
</script>


